---
import { SITE } from 'astrowind:config';
const logoUrl = '/images/logo.png';
---

<div class="flex items-center">
  <img src={logoUrl} alt="{SITE?.name} Logo" class="h-10 w-auto" width="40" height="40" />
  <span class="ml-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white">
    {SITE?.name}
  </span>
</div>
